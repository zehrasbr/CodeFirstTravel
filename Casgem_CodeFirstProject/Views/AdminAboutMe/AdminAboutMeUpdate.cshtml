@model Casgem_CodeFirstProject.DAL.Entities.AboutMe
@{
    ViewBag.Title = "AdminAboutMeUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Güncelleme</h2>
<form method="post">
    @Html.HiddenFor(x => x.AboutMeID)

    @Html.Label("Başlık 1")
    @Html.TextBoxFor(x => x.Title1, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama 1")
    @Html.TextBoxFor(x => x.Description1, new { @class = "form-control" })
    <br />
    @Html.Label("Resim 1")
    @Html.TextBoxFor(x => x.ImageUrl1, new { @class = "form-control"})
    <br />
    <br />
    <br />
    @Html.Label("Başlık 2")
    @Html.TextBoxFor(x => x.Title2, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama 2")
    @Html.TextBoxFor(x => x.Description2, new { @class = "form-control" })
    <br />
    @Html.Label("Resim 2")
    @Html.TextBoxFor(x => x.ImageUrl2, new { @class = "form-control"})
    <br />
    <button class="btn btn-success">Kaydet</button>
</form>

